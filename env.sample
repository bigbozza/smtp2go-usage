# SMTP2GO Monthly Usage Reporter Environment Variables
# Copy this file to ~/.smtp2go-usage/env and update the values

# API Settings (REQUIRED)
export SMTP2GO_API_KEY="your-api-key-here"

# SMTP Settings for sending reports (REQUIRED)
export SMTP2GO_SMTP_SERVER="smtp2go.com"
export SMTP2GO_SMTP_PORT=587
export SMTP2GO_SMTP_USERNAME="your-smtp-username"
export SMTP2GO_SMTP_PASSWORD="your-smtp-password"
export SMTP2GO_SENDER_EMAIL="sender@yourdomain.com"

# Report Recipients (REQUIRED)
# Comma-separated list of email addresses
export SMTP2GO_REPORT_RECIPIENTS="recipient1@example.com,recipient2@example.com"

# Report Directory (OPTIONAL)
# Directory to save generated PDF reports
# export SMTP2GO_REPORT_DIR="~/smtp2go-reports"